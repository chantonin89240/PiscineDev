<Page
    x:Class="ProjectCity.Client.UWP.WaitGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectCity.Client.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#17385D">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="txtNbJoueur" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Text="0/6 joueur en attente" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="60"/>
        <StackPanel Grid.Row="0">
            <TextBlock HorizontalAlignment="Left" Height="69" Margin="15,0,0,0" Text="Nom de votre companie :" TextWrapping="Wrap" VerticalAlignment="Top" Width="465" FontSize="40"/>
            <TextBox x:Name="txbNom" HorizontalAlignment="Left" Margin="15,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="40" Width="402"/>
            <Button x:Name="btnValid" Content="Valider" VerticalAlignment="center" HorizontalAlignment="center" FontSize="50" Click="btnValid_Click" Margin="0,15,0,0"/>
        </StackPanel>
        
        <ListView x:Name="lvJoueurs" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="center" ItemsSource="{x:Bind Players}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Pseudo}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="btnQuit" Grid.Row="2" Grid.Column="1" Content="Quitter" VerticalAlignment="center" HorizontalAlignment="center" FontSize="50" Click="btnQuit_Click"/>

    </Grid>
</Page>
